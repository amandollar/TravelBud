<%- layout("/layouts/boilerplate.ejs") -%>

<body class="bg-light text-dark">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h1 class="text-center text-primary mb-4 fw-bold">Add a New Listing</h1>

                        <form method="POST" action="/listings">
                            <div class="mb-3">
                                <label for="title" class="form-label">
                                    <i class="bi bi-house-door me-2"></i>Title
                                </label>
                                <input name="listing[title]" id="title" placeholder="Enter title" type="text" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">
                                    <i class="bi bi-card-text me-2"></i>Description
                                </label>
                                <textarea name="listing[description]" id="description" placeholder="Enter a description" class="form-control" rows="4" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="image" class="form-label">
                                    <i class="bi bi-image me-2"></i>Image URL
                                </label>
                                <input name="listing[image]" id="image" placeholder="Enter image URL" type="text" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label for="price" class="form-label">
                                    <i class="bi bi-currency-dollar me-2"></i>Price
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">â‚¹</span>
                                    <input name="listing[price]" id="price" placeholder="Enter price" type="number" class="form-control" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="country" class="form-label">
                                    <i class="bi bi-globe me-2"></i>Country
                                </label>
                                <input name="listing[country]" id="country" placeholder="Enter country" type="text" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label for="location" class="form-label">
                                    <i class="bi bi-geo-alt me-2"></i>Location
                                </label>
                                <input name="listing[location]" id="location" placeholder="Enter location" type="text" class="form-control" required>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-plus-circle me-2"></i>Add Listing
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <a href="/listings" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to All Listings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</body>