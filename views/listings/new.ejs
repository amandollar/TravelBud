<%- layout("/layouts/boilerplate.ejs") -%>

<body class="bg-light text-dark">
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg rounded-3">
          <div class="card-body p-5">
            <h1 class="text-center text-primary mb-4 fw-bold">Add a New Listing</h1>

            <form method="POST" action="/listings" class="needs-validation" novalidate>
              <div class="mb-4">
                <label for="title" class="form-label fw-bold">
                  <i class="bi bi-house-door me-2"></i>Title
                </label>
                <input name="listing[title]" id="title" placeholder="Enter title" type="text" class="form-control form-control-lg" required>
                <div class="invalid-feedback">Please enter a catchy title</div>
              </div>

              <div class="mb-4">
                <label for="description" class="form-label fw-bold">
                  <i class="bi bi-card-text me-2"></i>Description
                </label>
                <textarea name="listing[description]" id="description" placeholder="Enter a description" class="form-control form-control-lg" rows="4" required></textarea>
                <div class="invalid-feedback">Please enter a description</div>
              </div>

              <div class="mb-4">
                <label for="image" class="form-label fw-bold">
                  <i class="bi bi-image me-2"></i>Image URL
                </label>
                <input name="listing[image]" id="image" placeholder="Enter image URL" type="text" class="form-control form-control-lg" required>
                <div class="invalid-feedback">Please enter a valid image URL</div>
              </div>

              <div class="mb-4">
                <label for="price" class="form-label fw-bold">
                  <i class="bi bi-currency-rupee me-2"></i>Price
                </label>
                <div class="input-group input-group-lg">
                  <span class="input-group-text">â‚¹</span>
                  <input name="listing[price]" id="price" placeholder="Enter price" class="form-control" required>
                  <div class="invalid-feedback">Please enter a valid price</div>
                </div>
              </div>

              <div class="mb-4">
                <label for="country" class="form-label fw-bold">
                  <i class="bi bi-globe me-2"></i>Country
                </label>
                <input name="listing[country]" id="country" placeholder="Enter country" type="text" class="form-control form-control-lg" required>
                <div class="invalid-feedback">Please enter a valid country name</div>
              </div>

              <div class="mb-4">
                <label for="location" class="form-label fw-bold">
                  <i class="bi bi-geo-alt me-2"></i>Location
                </label>
                <input name="listing[location]" id="location" placeholder="Enter location" type="text" class="form-control form-control-lg" required>
                <div class="invalid-feedback">Please enter a location</div>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg hover-scale">
                  <i class="bi bi-plus-circle me-2"></i>Add Listing
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="text-center mt-4">
          <a href="/listings" class="btn btn-outline-secondary btn-lg hover-scale">
            <i class="bi bi-arrow-left me-2"></i>Back to All Listings
          </a>
        </div>
      </div>
    </div>
  </div>

  <style>
    .form-control:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    .hover-scale {
      transition: transform 0.3s ease;
    }
    .hover-scale:hover {
      transform: scale(1.05);
    }
  </style>
</body>