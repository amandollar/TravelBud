<% layout("/layouts/boilerplate.ejs") -%>

<body class="bg-light text-dark">
    <div class="container my-5">
        <h1 class="text-center text-primary mb-4 fw-bold"><%= listing.title %></h1>

        <!-- Listing Image -->
        <div class="text-center mb-4">
            <img src="<%= listing.image %>" alt="<%= listing.title %>" class="img-fluid rounded shadow-sm" style="max-width: 100%; height: auto;">
        </div>

        <!-- Listing Details -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title text-primary mb-3">Property Details</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-card-text me-2"></i><strong>Description:</strong></span>
                        <span class="text-muted"><%= listing.description %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-currency-rupee me-2"></i><strong>Price:</strong></span>
                        <span class="text-success fw-bold"><%= listing.price.toLocaleString("en-IN") %>&#8377;</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-geo-alt me-2"></i><strong>Location:</strong></span>
                        <span class="text-muted"><%= listing.location %></span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-globe me-2"></i><strong>Country:</strong></span>
                        <span class="text-muted"><%= listing.country %></span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Amenities (assuming you have this data) -->
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title text-primary mb-3">Amenities</h5>
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <i class="bi bi-wifi me-2"></i> Free WiFi
                    </div>
                    <div class="col-md-4 mb-2">
                        <i class="bi bi-p-square me-2"></i> Free Parking
                    </div>
                    <div class="col-md-4 mb-2">
                        <i class="bi bi-tv me-2"></i> TV
                    </div>
                    <!-- Add more amenities as needed -->
                </div>
            </div>
        </div>

        <!-- Edit/Delete Buttons -->
        <div class="d-flex justify-content-center mt-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning me-2">
                <i class="bi bi-pencil me-2"></i>Edit
            </a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline-block">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete
                </button>
            </form>
        </div>

        <!-- Back to Listings Button -->
        <div class="text-center mt-4">
            <a href="/listings" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left me-2"></i>Back to All Listings
            </a>
        </div>
    </div>

    <!-- Add Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</body>