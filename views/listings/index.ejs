<%- layout("/layouts/boilerplate.ejs") -%>

<body class="bg-light">
    <div class="container my-5">
        <h1 class="text-center text-primary mb-5 fw-bold">Discover Your Perfect Stay</h1>

        <!-- Listings -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% for(let listing of allListings){ %>
                <div class="col">
                    <div class="card h-100 shadow border-0 rounded-3 overflow-hidden">
                        <!-- Property Image -->
                        <div class="position-relative">
                            <img src="<%= listing.image %>" alt="<%= listing.title %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 p-2">
                                <span class="badge bg-primary rounded-pill">New</span>
                            </div>
                        </div>

                        <!-- Property Title and Description -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold mb-3"><%= listing.title %></h5>
                            <p class="card-text text-muted flex-grow-1" style="height: 4.5em; overflow: hidden; text-overflow: ellipsis;">
                                <%= listing.description %>
                            </p>
                            <!-- Property Features -->
                            <div class="d-flex justify-content-between text-muted mb-3">
                                <small><i class="bi bi-people-fill me-2"></i>4 guests</small>
                                <small><i class="bi bi-house-door-fill me-2"></i>2 bedrooms</small>
                                <small><i class="bi bi-star-fill me-2"></i>4.5 (42)</small>
                            </div>
                            <!-- View Button -->
                            <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary w-100 mt-auto">
                                View Property
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Add Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</body>