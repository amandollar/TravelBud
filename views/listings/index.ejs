<%- layout("/layouts/boilerplate.ejs") -%>

<body class="bg-light">
    <div class="container my-5">
        <h1 class="text-center text-primary mb-5 fw-bold display-4" style="font-family: 'Roboto', sans-serif;">Discover Your Perfect Stay</h1>

        <!-- Listings -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            <% for(let listing of allListings){ %>
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden transform-hover">
                        <!-- Property Image -->
                        <div class="position-relative">
                            <img src="<%= listing.image %>" alt="<%= listing.title %>" class="card-img-top" style="height: 250px; object-fit: cover; transition: transform 0.3s ease;">
                            <div class="position-absolute top-0 end-0 p-3">
                                <span class="badge bg-danger rounded-pill shadow-lg">New</span>
                            </div>
                        </div>

                        <!-- Property Title and Description -->
                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title text-primary fw-bold mb-3 fs-4 text-uppercase" style="font-family: 'Poppins', sans-serif;"><%= listing.title %></h5>
                            <p class="card-text text-muted mb-3" style="height: 4.5em; overflow: hidden; text-overflow: ellipsis;">
                                <%= listing.description %>
                            </p>

                            <!-- Property Features -->
                            <div class="d-flex justify-content-between text-muted mb-3">
                                <small><i class="bi bi-people-fill me-2"></i>4 guests</small>
                                <small><i class="bi bi-house-door-fill me-2"></i>2 bedrooms</small>
                                <small><i class="bi bi-star-fill me-2"></i>4.5 (42)</small>
                            </div>

                            <!-- View Button -->
                            <a href="/listings/<%= listing._id %>" class="btn btn-primary w-100 mt-auto py-3 fs-5 shadow-lg hover-scale">
                                <i class="bi bi-eye me-2"></i> View Property
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Add Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <!-- Additional CSS for transformations, hover effects, and animations -->
    <style>
        /* Hover Effects and Card Transformation */
        .card {
            transition: transform 0.4s ease, box-shadow 0.4s ease;
            position: relative;
        }
        .card:hover {
            transform: translateY(-15px);
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        }

        .card-img-top {
            transition: transform 0.3s ease;
        }
        .card:hover .card-img-top {
            transform: scale(1.05);
        }

        /* Hover Scaling Button */
        .hover-scale:hover {
            transform: scale(1.1);
            transition: transform 0.2s ease;
        }

        /* Typography Enhancement */
        h1 {
            font-family: 'Roboto', sans-serif;
            letter-spacing: 2px;
        }
        .card-title {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* Color Scheme */
        .card-body {
            background-color: #f9f9f9;
        }

        .badge {
            font-weight: bold;
            font-size: 0.9rem;
        }

        /* Buttons */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        /* Subtle animation for smoothness */
        .transform-hover {
            transition: transform 0.3s ease-in-out;
        }

        /* Microanimations */
        .btn-primary:hover {
            transform: scale(1.05);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .card-img-top {
                height: 200px;
            }
        }
    </style>
</body>
